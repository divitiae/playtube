<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        app:umanoPanelHeight="0dp"
        app:umanoShadowHeight="4dp"
        app:umanoParallaxOffset="180dp"
        app:umanoDragView="@+id/Mainroot"
        app:umanoOverlay="true">
        <FrameLayout
            android:id="@+id/mainFragmentHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            android:focusable="false"
            android:fitsSystemWindows="true" />
        <include
            android:id="@+id/slidepanelchildtwo_topviewtwo"
            layout="@layout/VideoSliderLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
    <android.support.v7.widget.CardView
        android:layout_above="@+id/buttomnavigationBar"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardElevation="0.3dp"
        app:cardCornerRadius="11dp"
        android:layout_marginBottom="0dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/VideoButtomStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="0dp"
            android:layout_above="@+id/buttomnavigationBar"
            android:background="?attr/colorReact"
            android:layout_height="match_parent"
            android:layout_width="wrap_content">
            <PlayTube.Helpers.Views.CustomTouchLayout
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:background="#000"
                android:focusable="false"
                android:id="@+id/Vcontainer"
                android:layout_width="197dp"
                android:minWidth="197dp"
                android:layout_height="110dp" />
            <LinearLayout
                android:layout_toEndOf="@+id/Vcontainer"
                android:id="@+id/videoTextcontainer"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="?attr/colorReact"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/videoTitileText"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="-"
                    android:layout_marginEnd="2dp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_marginStart="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/videoChannelText"
                    android:layout_marginTop="7dp"
                    android:textSize="12dp"
                    android:drawablePadding="4dp"
                    android:text="-" 
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
  <include
    android:layout_below="@+id/Vcontainer"
    android:id="@+id/buttomnavigationBar"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_gravity="bottom"
    layout="@layout/custom_navigationbar" /> 
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/multistroybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="10dp"
        app:menu_fab_size="normal"
        app:menu_showShadow="false"
        app:menu_shadowColor="@color/textIcon"
        app:menu_shadowRadius="4dp"
        app:menu_shadowXOffset="1dp"
        app:menu_shadowYOffset="3dp"
        app:menu_colorNormal="?attr/colorAccent"
        app:menu_colorPressed="#E75043"
        app:menu_colorRipple="#99FFFFFF"
        app:menu_animationDelayPerItem="50"
        app:menu_icon="@drawable/ic_add"
        app:menu_buttonSpacing="0dp"
        app:menu_labels_margin="0dp"
        app:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        app:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        app:menu_labels_paddingTop="4dp"
        app:menu_labels_paddingRight="7dp"
        app:menu_labels_paddingBottom="1dp"
        app:menu_labels_paddingLeft="8dp"
        app:menu_labels_padding="8dp"
        app:menu_labels_textColor="@color/textIcon"
        app:menu_labels_textSize="14sp"
        app:menu_labels_cornerRadius="3dp"
        app:menu_labels_colorNormal="#333333"
        app:menu_labels_colorPressed="#444444"
        app:menu_labels_colorRipple="#66FFFFFF"
        app:menu_labels_showShadow="false"
        app:menu_labels_singleLine="false"
        app:menu_labels_ellipsize="none"
        app:menu_labels_maxLines="-1"
        app:menu_labels_position="left"
        app:menu_openDirection="up"
        app:menu_backgroundColor="@android:color/transparent">
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/item_Import"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:fab_colorNormal="@color/textIcon"
            android:src="@drawable/ic_action_Import"
            app:fab_size="normal"
            app:fab_label="@string/Btn_Import" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/item_Upload"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:fab_colorNormal="@color/textIcon"
            android:src="@drawable/ic_action_Upload"
            app:fab_size="normal"
            app:fab_label="@string/Btn_Upload" />
    </com.github.clans.fab.FloatingActionMenu>
</RelativeLayout>