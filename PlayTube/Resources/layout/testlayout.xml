<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <LinearLayout
               android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:minWidth="100px"
                android:id="@+id/TitleLayout"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="13dp">
                <TextView
                    android:id="@+id/video_Titile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:includeFontPadding="false"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:text="@string/Lbl_Loading"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/video_ShowDiscription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:includeFontPadding="false"
                    android:textColor="#666"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:text="@string/Lbl_More"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="17dp"
                    android:layout_weight="0"
                    android:layout_marginBottom="5dp" />
            </LinearLayout>
        <RelativeLayout
            android:background="@drawable/half_shape_circle"
           android:layout_below="@+id/TitleLayout" 
            android:id="@+id/circlelayout"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

             <LinearLayout
                                android:layout_marginTop="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal"
                                android:minWidth="100px"
                                android:id="@+id/ButtonLayout"
                                android:minHeight="50px"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:id="@+id/LikeButton"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical">
                                    <ImageView
                                        android:id="@+id/Likeicon"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/icon_likefilled_video_vector"
                                        android:tint="#a7a7a7"
                                        android:layout_gravity="center"
                                        android:gravity="center" />
                                    <TextView
                                        android:id="@+id/LikeNumber"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="0"
                                        android:layout_marginTop="5dp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                   android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:id="@+id/UnLikeButton">
                                    <ImageView
                                        android:id="@+id/UnLikeicon"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/icon_likefilled_video_vector"
                                        android:tint="#a7a7a7"
                                        android:rotation="180"
                                        android:layout_gravity="center"
                                        android:gravity="center" />
                                    <TextView
                                        android:id="@+id/UnLikeNumber"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="0"
                                        android:layout_marginTop="5dp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:id="@+id/editButton">
                                    <TextView
                                        android:id="@+id/editIcon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="21sp"
                                        android:textStyle="bold"
                                        android:includeFontPadding="false"
                                        android:textColor="#a7a7a7"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Ic" />
                                    <TextView
                                        android:id="@+id/editNumber"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="@string/Lbl_Edit"
                                        android:layout_marginTop="5dp" />
                                </LinearLayout>
                                 <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:id="@+id/DonateButton">
                                    <ImageView
                                        android:id="@+id/donateicon"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/icon_video_donate_vector"
                                        android:tint="#a7a7a7"
                                        android:layout_gravity="center"
                                        android:gravity="center" />
                                    <TextView
                                        android:id="@+id/donatetext"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="@string/Lbl_Donate"
                                        android:layout_marginTop="5dp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                   android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:id="@+id/ShareButton">
                                    <TextView
                                        android:id="@+id/Shareicon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="21sp"
                                        android:textStyle="bold"
                                        android:includeFontPadding="false"
                                        android:textColor="#a7a7a7"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Ic" />
                                    <TextView
                                        android:id="@+id/ShareText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="@string/Lbl_Share"
                                        android:layout_marginTop="5dp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                   android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:id="@+id/AddToButton">
                                    <TextView
                                        android:id="@+id/AddToicon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="21sp"
                                        android:textStyle="bold"
                                        android:includeFontPadding="false"
                                        android:textColor="#a7a7a7"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Ic" />
                                    <TextView
                                        android:id="@+id/AddToNumber"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="@string/Lbl_Add_To"
                                        android:layout_marginTop="5dp" />
                                </LinearLayout>
                            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/ButtonLayout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/Channelvideolayout"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:id="@+id/Image_Channel"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/no_profile_image_circle"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="10dp" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/channelinfo_layout"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:fitsSystemWindows="true"
                        android:focusable="false">
                        <TextView
                            android:id="@+id/ChannelName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:includeFontPadding="false"
                            android:layout_gravity="start"
                            android:gravity="start" />
                        <TextView
                            android:id="@+id/ChannelVerified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/accent"
                            android:textSize="17dp"
                            android:textStyle="normal"
                            android:text="V"
                            android:visibility="gone"
                            android:layout_weight="2"
                            android:gravity="start"
                            android:layout_gravity="center"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginTop="1dp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/Channelviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#a7a7a7"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
        <Button
            android:layout_below="@+id/circlelayout"
            android:id="@+id/SubcribeButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:translationY="-22dp"
            android:drawableStart="@drawable/SubcribeButton"
            android:text="@string/Btn_Subscribe"
            android:background="@drawable/shape_radius_btn"
            android:textStyle="normal"
            android:textSize="13dp"
            android:layout_marginTop="0dp"
            android:paddingStart="8dp"
            android:paddingEnd="13dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/accent"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:drawablePadding="7dp"
            android:textColor="#efefef" />

         <LinearLayout
        android:layout_below="@+id/ButtonLayout"
        android:id="@+id/PaymentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <Button
            android:id="@+id/DonateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Lbl_Donate"
            android:textStyle="normal"
            android:textSize="13dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:backgroundTint="@color/accent"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/textIcon" />
        <Button
            android:id="@+id/RentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Lbl_Rent"
            android:textStyle="normal"
            android:textSize="13dp"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:backgroundTint="@color/accent"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/textIcon" />
    </LinearLayout>
    <LinearLayout
             android:layout_below="@+id/SubcribeButton"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/devidervideo2"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="?attr/colorDivider" />
    <LinearLayout
            android:layout_below="@+id/devidervideo2"
        android:id="@+id/videoDescriptionLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        android:tag="closed">
        <TextView
            android:id="@+id/videoDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:includeFontPadding="false"
            android:layout_gravity="start"
            android:gravity="start"
            android:text="@string/Lbl_Published_on"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp" />
        <com.luseen.autolinklibrary.AutoLinkTextView
            android:id="@+id/videoDescriptionTextview"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp" />
        <LinearLayout
            android:id="@+id/videoCategoryLayout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="4dp">
            <TextView
                android:id="@+id/videoCategoryDefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:includeFontPadding="false"
                android:layout_gravity="center"
                android:gravity="start"
                android:text="@string/Lbl_Category"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/videoCategorytextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:includeFontPadding="false"
                android:textColor="@color/accent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
   
</LinearLayout>