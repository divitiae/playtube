<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/mymainAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/mycollapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/accent"
            android:background="@xml/framealfacolor"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:collapsedTitleTextAppearance="@style/TextAppearance.MyApp.Title.Collapsed"
            app:expandedTitleTextAppearance="@style/TextAppearance.MyApp.Title.Expanded">
            <ImageView
                android:id="@+id/myImagevideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
            <LinearLayout
                android:id="@+id/myinfo_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="10dp"
                android:background="@xml/gradientblack"
                android:focusable="false"
                android:layoutDirection="ltr">
                <!--Top-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:id="@+id/myChannelImage"
                        android:scaleType="centerCrop"
                        android:layout_width="92dp"
                        android:layout_height="92dp"
                        android:layout_gravity="center"
                        android:focusable="false"
                        android:clickable="false"
                        android:layout_marginStart="0dp"
                         />
                    <!--Channel Name & Verified-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"       
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp" 
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/myChannelName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Username"
                            android:textSize="16dp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                            android:textColor="@color/textIcon" />
                        <TextView
                            android:id="@+id/myChannelVerifiedText"
                            android:text="V"
                            android:layout_height="wrap_content"
                            android:textColor="@color/accent"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="7dp"  />
                    </LinearLayout>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/mySubcribeChannelButton"
                        android:textSize="13sp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/follow_button_profile_friends"
                        android:tag="false"
                        android:paddingStart="17dp"
                        android:paddingEnd="17dp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/Lbl_Edit"
                        android:textColor="@color/textIcon" />
                </LinearLayout>
                <android.support.design.widget.TabLayout
                    android:id="@+id/mychanneltabs"
                    app:tabMode="scrollable"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    app:layout_collapseMode="pin"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:titleTextAppearance="@style/Toolbar.TitleText"
                android:background="#00000000"
                app:layout_collapseMode="pin">
                 <ImageView
                        android:id="@+id/mySettings_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:tint="@color/textIcon"
                        android:src="@drawable/icon_settings_vector"
                        android:layout_gravity="end|center"
                        android:gravity="end"
                        android:padding="5dp"
                             android:layout_weight="0.23"
                        android:layout_marginEnd="13dp" />
              
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/myChannelviewpager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="0dp" />
</android.support.design.widget.CoordinatorLayout>