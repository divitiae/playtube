<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/mainpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:backgroundTint="#00000000"
    android:minWidth="25px"
    android:minHeight="25px">
    <ScrollView
        android:id="@+id/mainscrollView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@xml/login_background_shape">
        <LinearLayout
            android:id="@+id/mainLinearLayout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="5dp">
            <!-- Here you can put your logo or brand name  -->
            <LinearLayout
                android:id="@+id/mainLinearLayout"
                android:layout_height="100dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_marginTop="0dp">
                <ImageView
                    android:layout_height="100dp"
                    android:layout_width="match_parent"
                    android:src="@drawable/logo"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="0dp"
                    android:padding="16dp" />
            </LinearLayout>
            <EditText
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:padding="8dp"
                android:drawableStart="@drawable/ic_user"
                android:maxLines="1"
                android:textColorHint="#000"
                android:textColor="#000"
                android:hint="@string/Lbl_Username"
                android:drawablePadding="12dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:id="@+id/usernamefield"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />
            <View
                android:background="?attr/colorDivider"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:padding="16dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" />
            <EditText
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:drawableStart="@drawable/ic_action_key_circular"
                android:maxLines="1"
                android:textColorHint="#000"
                android:hint="@string/Lbl_Password"
                android:textColor="#000"
                android:drawablePadding="12dp"
                android:ems="10"
                android:inputType="textPassword"
                android:id="@+id/passwordfield" />
            <View
                android:background="?attr/colorDivider"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar"
                    android:layout_centerInParent="true"
                    android:indeterminate="true"
                    android:visibility="invisible"
                    android:progressTint="@color/textIcon" />
                <Button
                    android:background="@xml/background_login"
                    android:layout_height="50dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:padding="14dp"
                    android:text="@string/Lbl_Login"
                    android:textColor="?attr/colorAccent"
                    android:textSize="15sp"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:textAllCaps="false"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/login_Button"   />
            </RelativeLayout>
            <com.facebook.login.widget.LoginButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/fblogin_button"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_rectangle_blue_round_corner_signin_four"/>
            <Button
                android:background="@xml/background_login"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:padding="14dp"
                android:text="@string/Btn_LoginGoogle"
                android:textColor="#444"
                android:textSize="15sp"
                android:clickable="true"
                android:textAllCaps="false"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/Googlelogin_button"
                android:drawableStart="@drawable/icon_google_button" />
            <Button
                android:id="@+id/WoWonderLogin_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="15sp"
                android:text="@string/Lbl_LoginWith"
                android:textColor="@color/WoWonderLogin_color"
                android:drawableStart="@mipmap/iconwowonder"
                android:padding="14dp"
                android:clickable="true"
				android:visibility="gone"
                android:textAllCaps="false"
                android:gravity="center"
                android:background="@xml/background_login"
                android:layout_gravity="center_horizontal" />
            <Button
                android:background="@xml/background_signup"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:padding="14dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="@string/Lbl_Register"
                android:textColor="@color/textIcon"
                android:textSize="15sp"
                android:clickable="true"
                android:textAllCaps="false"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:id="@+id/signUpButton" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:text="@string/Lbl_Forget_password"
                android:textColor="#444"
                android:clickable="true"
                android:id="@+id/forgetpassButton"
                android:gravity="center"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>